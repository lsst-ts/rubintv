{% extends "_layout.jinja" %}

{% block pagetitle %}
  Cluster Status
{% endblock pagetitle  %}
{% block pagesubtitle %}
  {{ location.title }}
{% endblock pagesubtitle  %}

{% block undertitle %}
{% endblock undertitle %}


{% block breadcrumb %}
  <a href="{{ url_for('home') }}">
    Home
  </a>>
  <a href="{{ url_for('location', location_name=location.name) }}">
    {{ location.title }}
  </a>>
  <p>Detectors</p>
{% endblock breadcrumb  %}

{% block content %}
    <section id="detectors">
      {# React TableApp root here #}
    </section>
{% endblock content %}

{% block footer_scripts %}
    <script>
      window.APP_DATA.date = {{ date|tojson }}
      window.APP_DATA.detectorKeys = {{ detector_keys|tojson }}
    </script>
    <script src='{{ url_for("static", path="assets/detectors.js") }}'></script>
  {{ super() }}
{% endblock footer_scripts  %}
