{% extends "_camera.jinja" %}
{% block pagesubtitle %}
Historical Movie
{% endblock pagesubtitle %}
{% block undertitle %}
{{ date }}
{% endblock undertitle %}
{% block breadcrumb %}
<a href="{{ url_for('home') }}">Home</a>>
<a href="{{ url_for('location', location_name=location.name) }}">{{ location.title }}</a>>
<a href="{{ url_for('camera', location_name=location.name, camera_name=camera.name) }}">{{ camera.title }}</a>>
<p>Historical</p>
{% endblock breadcrumb  %}

{% block content %}
  {% if historical_busy %}
     <p>Historical data is being processed... Please wait...</p>
  {% else %}
    <div class="columns">
      <section class="calendar half-width">
        {% include "camera_parts/calendar.jinja" %}
      </section>
      <section class="current-movie historical">
        {% include "camera_parts/allsky-movie.jinja" %}
      </section>
    </div>
  {% endif %}
{% endblock content %}
{% block footer_scripts %}
  <script src="{{ url_for('static', path='assets/allsky.js') }}"></script>
{% endblock footer_scripts %}

{% block further %}
 {{ super() }}
 <script>window.APP_DATA.isHistorical = true</script>
{% endblock further %}
