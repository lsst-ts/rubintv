{% extends "cameras/layout.jinja" %}

{% block content %}
<div id="refresher">
  <div class="subheader">
    <h2>{{event.date.date()}} : Sequence {{event.seq}}</h2>
  </div>
  <a href="{{event.url}}">
    <img class="resp {% if channel=="Monitor" %} behind {% endif %}" src="{{event.url}}">
  </a>
  {% if channel != "Monitor" %}
    <div class="desc">{{event.name}}</div>
  {% endif %}
</div>
{% endblock content %}
