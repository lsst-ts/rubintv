{% extends "_camera.jinja" %}

{% block pagesubtitle %}
  {{ channel.title }}
{% endblock pagesubtitle %}

{% block undertitle %}
 {{ event.day_obs }}
{% endblock undertitle %}

{% block breadcrumb %}
  <a href="{{ url_for('home') }}">
    Home
  </a>>
  <a href="{{ url_for('location', location_name=location.name) }}">
    {{ location.title }}
  </a>>
   <a href="{{ url_for('camera', location_name=location.name, camera_name=camera.name) }}">
    {{ camera.title }}
  </a>>
  <p>{{ channel.title }}</p>
{% endblock breadcrumb  %}

{% block content %}

  <div class="event-info">
  {% if event %}
    <h2>
      <span id="date">{{ event.day_obs }}</span>: Sequence
      <span id="seqNum">{{ event.seq_num }}</span>
    </h2>
    <nav class="prev-next-nav">

    </nav>
    </div>
    {% set img_url = url_for('event_image', location_name=location.name, filename=event.filename + '.' + event.ext) %}
    <a href="{{ img_url }}" class="event-link">
      <img id="eventImage" src="{{ img_url }}" class="resp">
      <p id="eventName" class="desc">{{ event.filename }}</p>
    </a>
  {% else %}
    <h2>There are no events for this channel</h2>
  {% endif %}

{% endblock content %}
