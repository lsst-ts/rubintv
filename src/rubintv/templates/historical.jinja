{% extends "_camera.jinja" %}
{% block pagesubtitle %}
Historical Data
{% endblock pagesubtitle %}
{% block undertitle %}
{{ date }}
{% endblock undertitle %}
{% block breadcrumb %}
<a href="{{ url_for('home') }}">Home</a>>
<a href="{{ url_for('location', location_name=location.name) }}">{{ location.title }}</a>>
<a href="{{ url_for('camera', location_name=location.name, camera_name=camera.name) }}">{{ camera.title }}</a>>
<p>Historical</p>
{% endblock breadcrumb  %}

{% block content %}
{% if historical_busy %}
    <p>Historical data is being processed... Please wait...</p>
{% else %}

  <section class="calendar">
    {% include "camera_parts/calendar.jinja" %}
  </section>

  <section id="channel-day-data">
    <div class="columns">
      {% include "camera_parts/night-report-link.jinja" %}
      {% include "camera_parts/per-day-channels.jinja" %}
    </div>
    {% include "camera_parts/data-table-header.jinja" %}
  </section>

{% endif %}
{% endblock content %}

{% block footer_scripts %}
  {% if camera.js_entry %}
    {% set filename = "assets/" + camera.js_entry + "_historical.js" %}
  {% else %}
    {% set filename = "assets/" + camera.name + "_historical.js" %}
  {% endif %}
    <script src="{{ url_for('static', path=filename) }}"></script>
{% endblock footer_scripts %}
