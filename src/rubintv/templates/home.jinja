{% extends "layout.jinja" %}
{% block content %}
  <h2 class="page-title">Cameras</h2>
  <nav class="camera-menu">
    <ul class="cameras flr">
      {% for camera in cameras.values() %}
        <li>
          <a class="button button-large" href="/rubintv/{{ camera.slug }}">{{ camera.name }}</a>
        </li>
      {% endfor %}
    </ul>
  </nav>
{% endblock content %}
{% block further %}
  <div class="admin-access">
    <a
      class="button button-small admin"
      href="/rubintv/admin">
      Admin
    </a>
  </div>
{% endblock further %}
