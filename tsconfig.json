{
  "compilerOptions": {
    "outDir": "./assets/",
    "sourceMap": true,
    "strict": true,
    "lib": ["dom", "dom.iterable", "es2022"],
    "module": "es2020",
    "target": "es2020",
    "jsx": "react",
    "allowJs": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "src",
    "paths": {
      "*": ["*", "*.ts", "*.tsx"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.test.*", "**/*.spec.*"]
}
